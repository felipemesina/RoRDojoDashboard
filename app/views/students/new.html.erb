<h1>New Student</h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<% end %>
<% end %>

<form action="/create/student/" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>First Name:<input type="text" name="student[first_name]"></label><br>
  <label>Last Name:<input type="text" name="student[last_name]"></label><br>
  <label>Email Address:<input type="text" name="student[email]"></label><br><br>
  <select name="student[dashboard_id]">
    <% @dojos.each do |dojo| %>
			<% if dojo == @dojo %>
				<option selected value="<%= dojo.id %>"><%= dojo.branch %></option>
			<% else %>
				<option value="<%= dojo.id %>"><%= dojo.branch %></option>
			<% end %>
		<% end %>
		</select><br><br>
  <input type="submit" value="Create">
</form>

<a href='/'>Home</a>
