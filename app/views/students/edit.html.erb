<h1>Editing <%=@student.first_name%> <%=@student.last_name%></h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<% end %>
<% end %>

<form action="/update/students/<%= @student.id%>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>
  <label>First Name:<input type="text" name="student[first_name]"></label>
  </p>
  <p>
  <label>Last Name:<input type="text" name="student[last_name]"></label>
  </p>
  <p>
  <label>Email Address:<input type="text" name="student[email]"></label>
</p>Dojo:
  <select name="student[dashboard_id]">
    <% @dojos.each do |dojo| %>
			<% if dojo == @dojo %>
				<option selected value="<%= dojo.id %>"><%= dojo.branch %></option>
			<% else %>
				<option value="<%= dojo.id %>"><%= dojo.branch %></option>
			<% end %>
		<% end %>
		</select><br><br>
  <p>
  <input type="submit" value="Update">
  </p>

</form>
